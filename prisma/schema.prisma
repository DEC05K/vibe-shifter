generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql" // sqlite から変更
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // これを追加（重要！）
}

// 以下、既存のモデル定義はそのまま残す
model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}